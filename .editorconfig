# EditorConfig 配置文件
# 统一不同编辑器的代码格式

root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件保留尾随空格（用于换行）
[*.md]
trim_trailing_whitespace = false

# Go 文件使用 tab 缩进
[*.go]
indent_style = tab
indent_size = 4

# Python 文件使用 4 空格缩进
[*.py]
indent_size = 4

# Rust 文件使用 4 空格缩进
[*.rs]
indent_size = 4

# YAML 文件使用 2 空格缩进
[*.{yml,yaml}]
indent_size = 2

# JSON 文件使用 2 空格缩进
[*.json]
indent_size = 2

# TypeScript/JavaScript 文件使用 2 空格缩进
[*.{ts,tsx,js,jsx}]
indent_size = 2

# CSS/SCSS 文件使用 2 空格缩进
[*.{css,scss,sass,less}]
indent_size = 2

# HTML 文件使用 2 空格缩进
[*.{html,htm}]
indent_size = 2

# XML 文件使用 2 空格缩进
[*.xml]
indent_size = 2

# Makefile 必须使用 tab
[Makefile]
indent_style = tab

# Docker 文件使用 2 空格缩进
[{Dockerfile,*.dockerfile}]
indent_size = 2

# Shell 脚本使用 2 空格缩进
[*.{sh,bash}]
indent_size = 2